<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_layout"
    android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
    style="@style/ActivityBackground"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/ic_background"
    tools:context="com.ibm.iot.android.iotstarter.activities.RegisterNewUserActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text="First Name (*)"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/first_name"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/last_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Last Name (*)"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text="Username/email (*)"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/username_email"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/password1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text="Password (*)"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/password1"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:inputType="textPassword"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/password2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text="Password 2 (*)"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />


        <EditText
            android:id="@+id/password2"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:inputType="textPassword"
            android:textSize="16dp" />
    </LinearLayout>


<TextView
        android:id="@+id/search_key_words_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Search Key Words (*)"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/search_key_words"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/BottomButton"
            android:textColor="#FFFFFF"
            android:id="@+id/register_user"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Register User"

            android:textSize="18dp"></Button>


    </LinearLayout>
</LinearLayout>
