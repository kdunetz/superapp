<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ocrscan_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Company Name (*)"
        android:textColor="#000000"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Description (*)"
        android:textColor="#000000"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/ocr_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Website"
        android:textColor="#000000"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Promo Code"
        android:textColor="#000000"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/promo_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Date (*)"
        android:textColor="#000000"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />

</LinearLayout>
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Number of Days"
        android:textColor="#000000"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/num_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout         android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/coupon_expiration_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Coupon Expiration Days (*)"
        android:textColor="#000000"
        android:textSize="16dp" />
        <EditText
            android:id="@+id/coupon_expiration_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reward_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text="Coupon Reward"
            android:textColor="#000000"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/coupon_reward_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16dp" />

    </LinearLayout>
<LinearLayout         android:layout_height="50dp"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="horizontal">
    <Button
        android:id="@+id/save_ocr_record"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Save Record"
        android:textSize="18dp" >
    </Button>
    <Button
        android:id="@+id/take_another_picture"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Take New Picture"
        android:textSize="16dp" >
    </Button>
    </LinearLayout>
</LinearLayout>
