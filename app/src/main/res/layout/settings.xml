<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ocrscan_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Deal Alert Distance"
        android:textColor="#000000"
        android:textSize="12dp" />


    <EditText
        android:id="@+id/deal_alert_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text="Coupon Alert Distance"
        android:textColor="#000000"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/coupon_alert_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="5dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text="Deal Maximum Length"
            android:textColor="#000000"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/max_deal_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/local_business_search_radius_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text="Local Business Search Radius"
            android:textColor="#000000"
            android:textSize="12dp" />


        <EditText
            android:id="@+id/local_business_search_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="12dp" />
    </LinearLayout>
   <LinearLayout         android:layout_height="50dp"
    android:layout_width="match_parent"
    android:orientation="horizontal">

       <Button
           android:id="@+id/save_settings"
           android:layout_width="150dp"
           android:layout_height="80dp"
           android:layout_gravity="center"
           android:layout_margin="10dp"
           android:gravity="center"
           android:text="Save Settings"
           android:textSize="18dp"></Button>
    </LinearLayout>
</LinearLayout>
